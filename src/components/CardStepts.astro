---
interface Props{
    number: string;
    title: string; 
    content: string;
    lastContent: boolean
}

const { number, title, content, lastContent } = Astro.props; 
---

<div class="flex space-x-6 py-10">
    <div class="relative">
        <span class="px-3 py-3 bg-gray-200 rounded-full">{number}</span>
        <div class:list={["border-l-4 border-gray-500 h-[100px] absolute top-1/2 left-1/2 rounded-lg",{"hidden" : lastContent}]}></div>
    </div>
    <div class="space-y-6">
        <h3 class="text-gray-700 text-sm font-mono tracking-widest">{ title }</h3>
        <p class="text-lg max-w-md">{ content }</p>
    </div>
</div>