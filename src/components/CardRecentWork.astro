---
import type { project } from '../interfaces/project';

type Props = project; 
const {title, description, url, image} = Astro.props
---

<a href={ url } class="group relative block bg-black rounded-lg">
    <img
      alt={ title }
      src={ image }
      class="absolute inset-0 h-full w-full object-cover opacity-75 transition-opacity group-hover:opacity-50 rounded-lg"
    />
  
    <div class="relative p-4 sm:p-6 lg:p-8">
      <p class="text-sm font-mono uppercase tracking-widest text-gray-200">
        Proyectos de
      </p>
  
      <p class="text-xl font-bold text-white sm:text-2xl tracking-widest">{ title }</p>
  
      <div class="mt-32 sm:mt-48 lg:mt-64">
        <div
          class="translate-y-8 transform opacity-0 transition-all group-hover:translate-y-0 group-hover:opacity-100"
        >
          <p class="text-sm text-white">
            { description }
          </p>
        </div>
      </div>
    </div>
  </a>